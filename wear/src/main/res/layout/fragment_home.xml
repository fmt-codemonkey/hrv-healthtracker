<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Emoji Status -->
        <TextView
            android:id="@+id/hrv_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Œ"
            android:textSize="64sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/stress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relaxed"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- HRV and RHR container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- HRV -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/hrv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="28sp"
                    android:textColor="#00FFAA"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hrv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HRV (ms)"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- RHR -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/rhr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="28sp"
                    android:textColor="#FFA07A"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rhr_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RHR (bpm)"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Navigate to ActionsFragment -->
        <Button
            android:id="@+id/btn_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Activity"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>
</ScrollView>
