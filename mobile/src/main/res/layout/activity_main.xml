<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- HRV Section -->
        <TextView
            android:id="@+id/hrv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HRV Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/hrv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- ms"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#00BFFF"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/hrv_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤”"
            android:textSize="40sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/stress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insufficient Data"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Water Section -->
        <TextView
            android:id="@+id/water_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Intake from Watch"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/water_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- ml"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#00BFFF" />

        <TextView
            android:id="@+id/water_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today: -- ml"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="12dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View History"
            android:layout_marginTop="24dp"
            android:backgroundTint="#00BFFF"
            android:textColor="@android:color/white"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_view_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Chart"
            android:layout_marginTop="16dp"
            android:backgroundTint="#00BFFF"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
